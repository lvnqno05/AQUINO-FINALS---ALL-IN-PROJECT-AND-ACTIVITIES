@model IEnumerable<MiniJobBoard.Infrastructure.Entities.Job>
@using System.Linq
@{
    ViewData["Title"] = "My postings";
}

@{ var total = Model.Count(); var active = Model.Count(j => j.IsActive); var inactive = total - active; }
<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <div>
        <h1 class="m-0">My job postings</h1>
        <div class="mt-2 d-flex gap-2">
            <span class="badge rounded-pill bg-secondary">@total total</span>
            <span class="badge rounded-pill bg-success">@active active</span>
            @if (inactive > 0) { <span class="badge rounded-pill bg-dark">@inactive closed</span> }
        </div>
    </div>
    <a class="btn btn-primary" asp-controller="Jobs" asp-action="Create">Post a job</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">You haven't posted any jobs yet.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Posted</th>
                    <th>Applications</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var job in Model)
                {
                    <tr>
                        <td>@job.Title</td>
                        <td>
                            @if (job.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>@job.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd")</td>
                        <td>
                            @{ var totalApps = job.Applications?.Count ?? 0; var pendingApps = job.Applications?.Count(a => a.Status == "Pending") ?? 0; }
                            <span class="badge bg-secondary">@totalApps total</span>
                            @if (pendingApps > 0) { <span class="badge bg-warning text-dark">@pendingApps pending</span> }
                        </td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary" asp-action="Applicants" asp-route-id="@job.Id">Applicants</a>
                            <form asp-action="ToggleStatus" asp-route-id="@job.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                @if (job.IsActive)
                                {
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Close</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-sm btn-outline-success">Open</button>
                                }
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
